<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/barber_black_deep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Foto del Barbero -->
        <ImageView
            android:id="@+id/ivFotoBarbero"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:src="@drawable/baseline_person_24"
            android:background="@null"
            android:padding="8dp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Barbero"
            android:fontFamily="@font/oswald_bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/textEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Activo"
            android:fontFamily="@font/oswald_regular"
            android:textSize="15sp"
            android:textColor="@color/barber_gray_steel"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActualizar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/barber_blue_navy"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@android:color/white"
                app:iconPadding="12dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/barber_red_dark"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@android:color/white"
                app:iconPadding="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

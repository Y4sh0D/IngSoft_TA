<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminhome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".actividades.AdminHomeActivity">

    <!-- Título: ADMINISTRADOR -->
    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="ADMINISTRADOR"
        android:textAlignment="center"
        android:textColor="#FFD700"
        android:textSize="32sp"
        android:fontFamily="@font/oswald_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/adminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verReservasDelDia"
            style="@style/AdminButtonStyle"
            android:text="Ver Reservas del Día" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reservasPorConfirmar"
            style="@style/AdminButtonStyle"
            android:text="Reservas por Confirmar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reservasRealizadas"
            style="@style/AdminButtonStyle"
            android:text="Reservas Realizadas" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/listarUsuario"
            style="@style/AdminButtonStyle"
            android:text="Lista de Usuarios" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/crearServicio"
            style="@style/AdminButtonStyle"
            android:text="Gestión de Servicios" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gestionHorarios"
            style="@style/AdminButtonStyle"
            android:text="Gestión de Horarios" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gestionBarbero"
            style="@style/AdminButtonStyle"
            android:text="Gestión de Barberos" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogoutAdmin"
            style="@style/LogoutButtonStyle"
            android:text="Cerrar Sesión" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

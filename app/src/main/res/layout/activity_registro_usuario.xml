<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/barber_white_off"
    tools:context=".actividades.RegistroUsuarioActivity">

    <TextView
        android:id="@+id/tituloRegistroUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Registrar Usuario"
        android:textAlignment="center"
        android:textColor="@color/barber_blue_navy"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/oswald_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/usuarioInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Usuario"
        android:padding="16dp"
        android:textColor="@color/barber_black_deep"
        android:textColorHint="@color/barber_gray"
        android:fontFamily="@font/oswald_regular"
        app:layout_constraintTop_toBottomOf="@id/tituloRegistroUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/contraseñaInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="@color/barber_black_deep"
        android:textColorHint="@color/barber_gray"
        android:fontFamily="@font/oswald_regular"
        app:layout_constraintTop_toBottomOf="@id/usuarioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/nombreInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Nombre"
        android:padding="16dp"
        android:textColor="@color/barber_black_deep"
        android:textColorHint="@color/barber_gray"
        android:fontFamily="@font/oswald_regular"
        app:layout_constraintTop_toBottomOf="@id/contraseñaInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/apellidoInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Apellido"
        android:padding="16dp"
        android:textColor="@color/barber_black_deep"
        android:textColorHint="@color/barber_gray"
        android:fontFamily="@font/oswald_regular"
        app:layout_constraintTop_toBottomOf="@id/nombreInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/celularInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="Celular"
        android:inputType="phone"
        android:padding="16dp"
        android:textColor="@color/barber_black_deep"
        android:textColorHint="@color/barber_gray"
        android:fontFamily="@font/oswald_regular"
        app:layout_constraintTop_toBottomOf="@id/apellidoInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/correoInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:inputType="textEmailAddress"
        android:hint="Correo"
        android:padding="16dp"
        android:textColor="@color/barber_black_deep"
        android:textColorHint="@color/barber_gray"
        android:fontFamily="@font/oswald_regular"
        app:layout_constraintTop_toBottomOf="@id/celularInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registrarButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="Registrar nuevo usuario"
        android:textColor="@color/white"
        app:backgroundTint="@color/barber_black_deep"
        app:cornerRadius="12dp"
        android:fontFamily="@font/oswald_bold"
        app:layout_constraintTop_toBottomOf="@id/correoInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/volverButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:text="Volver"
        android:textColor="@color/white"
        app:backgroundTint="@color/barber_gray"
        app:cornerRadius="12dp"
        android:fontFamily="@font/oswald_bold"
        app:layout_constraintTop_toBottomOf="@id/registrarButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

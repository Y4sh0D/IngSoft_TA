<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/barber_black_deep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Foto del Servicio -->
        <ImageView
            android:id="@+id/ivFotoServicio"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:src="@drawable/baseline_person_24"
            android:background="@null"
            android:padding="8dp" />

        <!-- Nombre del Servicio -->
        <TextView
            android:id="@+id/textNombreServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Servicio"
            android:textStyle="bold"
            android:fontFamily="@font/oswald_bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Precio -->
        <TextView
            android:id="@+id/textPrecioServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 00.00"
            android:fontFamily="@font/oswald_bold"
            android:textSize="18sp"
            android:textColor="@color/barber_red_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textDescripcionServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del servicio"
            android:fontFamily="@font/oswald_regular"
            android:textSize="15sp"
            android:textColor="@color/barber_gray_steel"
            android:layout_marginBottom="4dp" />

        <!-- Tipo de Servicio -->
        <TextView
            android:id="@+id/textTipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de servicio"
            android:fontFamily="@font/oswald_regular"
            android:textSize="15sp"
            android:textColor="@color/barber_gray_steel"
            android:layout_marginBottom="12dp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnActualizarServicio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/barber_blue_navy"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@android:color/white"
                app:iconPadding="12dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminarServicio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="@color/barber_red_dark"
                app:cornerRadius="24dp"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@android:color/white"
                app:iconPadding="12dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activitidades.ReservasPorConfirmarActivity">

    <TextView
        android:id="@+id/tituloReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservas por Confirmar"
        android:textColor="#333333"
        android:textSize="30sp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/reservasTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:stretchColumns="1"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloReservas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TableRow
            android:background="#1E1E1E"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha y Hora"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbera"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/reservaRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showDetails"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 10:30"
                android:textColor="#333333"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos"
                android:textColor="#333333"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corte de cabello"
                android:textColor="#333333"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 30"
                android:textColor="#333333"
                android:padding="8dp"/>
            <Button
                android:id="@+id/confirmarButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Reserva"
                android:layout_marginStart="8dp"
                android:background="#1E88E5"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:visibility="gone"/>
        </TableRow>

        <TableRow
            android:id="@+id/reservaRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showDetails"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00 - 11:30"
                android:textColor="#333333"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laura"
                android:textColor="#333333"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afeitado"
                android:textColor="#333333"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 20"
                android:textColor="#333333"
                android:padding="8dp"/>
            <Button
                android:id="@+id/confirmarButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver Reserva"
                android:layout_marginStart="8dp"
                android:background="#1E88E5"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:visibility="gone"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/volverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:background="#1E88E5"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/reservasTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".activitidades.ReservasPorConfirmarActivity">

    <TextView
        android:id="@+id/tituloReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservas por Confirmar"
        android:textColor="#1E1E1E"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TableLayout
        android:id="@+id/reservasTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/tituloReservas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:background="#212121"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha y Hora"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbero"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="8dp"/>
        </TableRow>

        <!-- Primera fila -->
        <TableRow
            android:id="@+id/reservaRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showDetails"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 10:30"
                android:textColor="#555555"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos"
                android:textColor="#555555"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corte de cabello"
                android:textColor="#555555"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 30"
                android:textColor="#555555"
                android:padding="8dp"/>

            <Button
                android:id="@+id/confirmarButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:padding="6dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>
        </TableRow>

        <!-- Segunda fila -->
        <TableRow
            android:id="@+id/reservaRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="showDetails"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00 - 11:30"
                android:textColor="#555555"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laura"
                android:textColor="#555555"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afeitado"
                android:textColor="#555555"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 20"
                android:textColor="#555555"
                android:padding="8dp"/>

            <Button
                android:id="@+id/confirmarButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:padding="6dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/volverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="#212121"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:padding="14dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/reservasTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activitidades.ServiciosActivity">

    <TextView
        android:id="@+id/tituloRegistroServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="REGISTRAR SERVICIO"
        android:textAlignment="center"
        android:textColor="#2C3E50"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/servicioInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="SERVICIO"
        android:padding="16dp"
        android:textColor="#2C3E50"
        android:textColorHint="#BDC3C7"
        app:layout_constraintTop_toBottomOf="@id/tituloRegistroServicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/precioInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edit_text_background"
        android:hint="PRECIO"
        android:padding="16dp"
        android:textColor="#2C3E50"
        android:textColorHint="#BDC3C7"
        app:layout_constraintTop_toBottomOf="@id/servicioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/registrarButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="#1E1E1E"
        android:text="REGISTRAR"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="16dp"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/precioInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

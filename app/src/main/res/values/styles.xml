<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ReservaButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Blanco para buen contraste -->
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item> <!-- Más separación entre botones -->
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AdminButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">#FF9800</item>
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
    </style>

    <style name="LogoutButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">#E53935</item> <!-- Rojo de peligro -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
    </style>

    <style name="AdminButtonStyleSquare" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:backgroundTint">#424242</item>
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="iconSize">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

</resources>
